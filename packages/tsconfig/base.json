{
    "$schema": "https://json.schemastore.org/tsconfig",

    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "incremental": true,
        "declaration": true,
        "strict": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "composite": true
    }
}
